# LuxHub Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# REQUIRED - Application will not start without these
# ===========================================

# Solana Configuration
NEXT_PUBLIC_SOLANA_ENDPOINT=https://api.devnet.solana.com
PROGRAM_ID=your_deployed_program_id

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/Luxhub

# Authentication
JWT_SECRET=your_secure_random_string_min_32_chars

# ===========================================
# REQUIRED FOR FULL FUNCTIONALITY
# ===========================================

# NFT Storage Provider (irys | pinata | arweave | both)
# Irys is recommended - permanent Arweave storage, pay in SOL
STORAGE_PROVIDER=irys

# Irys Storage (Recommended - Arweave-backed, pay in SOL)
# For devnet: Use "devnet" network (free uploads for testing)
# For mainnet: Use "mainnet" network (permanent storage)
IRYS_NETWORK=devnet
IRYS_PRIVATE_KEY=your_base58_encoded_solana_private_key

# Pinata/IPFS Storage (Legacy - optional backup)
PINATA_API_KEY=your_pinata_api_key
PINATA_API_SECRET_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token
NEXT_PUBLIC_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# Wallet Configuration
NEXT_PUBLIC_LUXHUB_WALLET=your_treasury_wallet_address

# ===========================================
# OPTIONAL - Enhanced Features
# ===========================================

# Helius RPC (recommended for production)
HELIUS_API_KEY=your_helius_api_key
HELIUS_ENDPOINT=https://devnet.helius-rpc.com/?api-key=your_key

# Vercel Edge Config
EDGE_CONFIG=your_edge_config_url

# Squads Multisig
NEXT_PUBLIC_SQUADS_MSIG=your_squads_multisig_address
SQUADS_MEMBER_KEYPAIR_PATH=/path/to/keypair.json

# NFT Configuration
NEXT_PUBLIC_CANDY_MACHINE_ID=your_candy_machine_id

# Privy Authentication
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id

# IBM Cloud Object Storage
IBM_COS_API_KEY=your_ibm_cos_api_key
IBM_COS_RESOURCE_INSTANCE_ID=your_resource_instance_id

# AI Features
XAI_API_KEY=your_xai_api_key

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
NODE_ENV=development
